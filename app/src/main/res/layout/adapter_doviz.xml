<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivDovizImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <RelativeLayout
                android:id="@+id/rlTextMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivDovizImage">

                <TextView
                    android:id="@+id/tvDovizName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Döviz Adı"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDovizSelling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDovizName"
                    android:layout_marginTop="5dp"
                    android:text="Döviz Fiyatı"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDovizPercent"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDovizSelling"
                    android:layout_marginTop="5dp"
                    android:text="Döviz Yüzde"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDovizSelling"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tvDovizPercent"
                    tools:srcCompat="@drawable/ic_arrow_up" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>